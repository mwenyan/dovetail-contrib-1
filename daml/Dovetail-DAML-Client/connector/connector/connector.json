{
    "name": "DAMLLedgerConnector",
    "version": "1.0.0",
    "title": "DAML Ledger Service Connector",
    "type": "flogo:connector",
    "author": "TIBCO Software Inc.",
    "display": {
        "description": "connection info for DAML ledger server",
        "category": "Dovetail-DAML-Client",
        "visible": true,
        "smallIcon": "params.png",
        "largeIcon": "params.png",
        "connectionsupport": true
    },
    "ref": "github.com/TIBCOSoftware/dovetail-contrib/daml/Dovetail-DAML-Client/connector/connector",
    "keyfield": "display",
    "settings": [
        {
            "name": "display",
            "type": "string",
            "required": true,
            "display": {
                "name": "Connector Name",
                "visible": true
            }
        },
        {
            "name": "connectorType",
            "type": "string",
            "required": true,
            "display": {
                "name": "Select Connector Type",
                "visible": true ,
                "type": "dropdown", 
                "selection": "single"
            }
        },
        {
            "name": "host",
            "type": "string",
            "display": {
                "name":"host",
                "visible":false,
                "description": "host",
                "appPropertySupport":true
            }
        },
        {
            "name": "port",
            "type": "integer",
            "display": {
                "name": "port",
                "visible":false,
                "description": "port",
                "appPropertySupport":true
            }
        },
        {
            "name": "JWT",
            "type": "string",
            "display": {
                "name": "JWT",
                "visible":false,
                "description": "JWT token",
                "appPropertySupport":true
            }
        },
        {
            "name": "timeout",
            "type": "integer",
            "display": {
                "name":"Time out value in seconds",
                "visible":false,
                "description": "timeout",
                "appPropertySupport":true
            }
        },
        {
            "name": "enableSSL",
            "type": "boolean",
            "display": {
                "name": "enable SSL",
                "visible":false,
                "description": "enable ssl",
                "appPropertySupport":true
            }
        }
    ],
    "actions": [ 
        
        {
            "name": "Done"
        }
    ]
}