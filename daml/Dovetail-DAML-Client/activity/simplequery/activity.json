{
    "name": "simplequery",
    "title": "Simple Query",
    "version": "1.0.0",
    "type": "flogo:activity",
    "author": "TIBCO Software Inc.",
    "display": {
       "category": "Dovetail-DAML-Client",
       "visible": true,
       "smallIcon": "query.png",
       "description": "Query contracts"
    },
    "feature": {
        "iterator": {
                "type": "iterator",
                "enabled": false
        }
    },
    "ref": "github.com/TIBCOSoftware/dovetail-contrib/daml/Dovetail-DAML-Client/activity/simplequery",
    "inputs": [
            {
                "name": "contract",
                "type": "string",
                "required": true,
                "display": {
                    "name": "Specify DAML Package",
                    "type": "dropdown",
                    "selection":"single"
                },
                "allowed":[]
            },
            {
                "name": "template",
                "type": "string",
                "required": true,
                "display": {
                    "name": "Specify the contract tempate",
                    "type": "dropdown",
                    "selection":"single"
                },
                "allowed":[]
            },
            {
                "name": "query",
                "type": "string",
                "required":true,
                "display": {
                    "name": "Query Statement",
                    "description": "Rich query statement with parameters prefixed by '$', e.g. {\"amount\": { \"%lt\":\"$amt\" }}",
                    "type": "texteditor",
                    "syntax": "json"
                }
            },
            {
                "name": "queryParams",
                "type": "complex_object",
                "display": {
                    "type": "params",
                    "name": "Query Parameters",
                    "description": "The parameters used by the query statement",
                    "mappable": true,
                    "schema": "{\"type\":\"array\",\"items\":{\"type\":\"object\",\"properties\":{\"parameterName\":{\"type\":\"string\"},\"type\":{\"type\":{\"enum\":[\"string\",\"number\",\"boolean\", \"date\"]}}, \"repeating\":{\"type\":{\"enum\":[\"false\",\"true\"]}}}}}"
                }
            },
            {
                "name": "connector",
                "type": "connection",
                "required": true,
                "display": {
                    "name": "Connection to ledger service",
                    "type": "connection"
                },
                "allowed":[]
            },
           {
                "name": "packageId",
                "type": "string",
                "required": true,
                "display": {
                    "visible":false
                }
            }
    ],
  
    "outputs": [
        {
            "name": "output",
            "type": "complex_object",
            "required": false
       }
    ]
}
